<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1,shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Article Page</title>
<body style="background-color:#455DF8;">
    <h1 class="mb-4" style="margin-left: 45%; margin-top: 2%;"> Article </h1>
    <a href="home" class="btn btn-dark btn-lg" style="margin-left: 45%; margin-top:1%"><i class="fa fa-home"></i>Home</a>
    <% posts.forEach(Home1 => { %>
    <div class="card  text-white bg-dark mt-4" style="width:40rem; margin-left: 15%;">
        <div class="card-body">
            <h4 class="card-title"><button class="btn btn-danger" style="color:white; "><h5 style="align-items: center;">Title</h5></button> :  <%= Home1.title %></h4>
            <div class="card-subtitle  mb-2" style="font-size: 1.5rem;">
                <button class="btn btn-danger" style="color:white; "><h5>Date</h5></button> : <%= Home1.createdAt.toLocaleDateString() %>
            </div>
            <div class="card-text mb-2" style="font-size: 1.5rem;"><button class="btn btn-danger" style="color:white; "><h5>Description</h5></button> : <%= Home1.description %></div>
            <form class="myform" action="<%= Home1.id %>?_method=PUT" method="POST">
                <div class="mb-3">  
                <label for="comments">Comments:</label>              
                <input  type="comments" class="form-control" id="exampleFormControlInput1" placeholder="Add a comment...." required name="comments">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
            <h5>View all comments:</h5>
            <div class="card-text mb-4" style="margin-top:3%; margin-left:3%"><%= Home1.comments %><br></div>
        </div>
    </div>
    
    <% }) %>
</body>
</html>
